<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPrueba.Vistas.RegistrarUsuario">
    <ContentPage.Content>
        <StackLayout Padding="15" VerticalOptions="Center">
            <Label Text="Registro de Usuario"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   FontSize="Large" />
            <Entry Placeholder="Usuario" x:Name="txtUsuario"/>
            <Entry Placeholder="Contrasena"
                   x:Name="txtContrasena"/>
            <Entry Placeholder="Correo" x:Name="txtCorreo"/>
            <Button Text="Registrar"
                    x:Name="btnRegistrar"
                    Clicked="btnRegistrar_Clicked"
                    CornerRadius="15" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>